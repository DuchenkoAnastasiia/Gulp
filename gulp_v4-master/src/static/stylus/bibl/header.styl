.header
    position fixed
    z-index 2000
    width 100% 
    padding-top 10px

    &__container
        display flex
        align-items center

        &__logo
            margin-right 20px

        &__nav
            display flex
            font-size (12 / $fontSize)rem
            letter-spacing 2px
            text-transform uppercase
            color $grey
            

            & > a
                margin-right 20px
                color $grey

                &:last-child
                    margin-right 0

        &__btn-block
            margin-left auto

            & > a
                border 1px solid $or
                box-sizing border-box
                border-radius 4px
                font-size 12px
                line-height 20 / 12
                text-align center
                letter-spacing 2px
                text-transform uppercase
                color $or
                padding 14px 30px
                transition all .3s

                &:first-child:hover
                    background-color $or
                    color $white
                
                &:last-child
                    margin-left 20px
                    color $white
                    background-color $or
                    box-shadow: -11.09px 18.13px 36.6483px rgba(242, 153, 74, .13);

                    &:hover
                        background-color $orHover

        &__btn-menu
            display: none
            margin-left: auto
            background-color: transparent
            padding: 0
            border: none
            outline: none
            cursor pointer

            & > img 
                width 20px

        &__menu-mob
            transition: left .3s
            position: fixed
            width: 100%
            height: 100%
            left 100%
            top: 50px
            background-color: #3B1D60
            padding: 20px
            &__nav
                & > a 
                    color: $grey
                    display: block
                    margin: 0 0 15px
            &__btn-block
                & > a:first-child
                    margin-right: 10px
                

        
        