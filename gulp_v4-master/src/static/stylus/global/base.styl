body
    padding 0
    margin 0
    background linear-gradient(222.26deg, #3B1D60 1.22%, #040D3E 106.28%)
    min-height 100vh;
    font-size $fontSize
    line-height $lineHeight
    font-family $fontFamily

.container
    width 90%
    margin 0 auto 
    max-width 1100px
a
    text-decoration none

ul 
    list-style none
img 
    max-width 100%
.cursor-pointer
    cursor pointer

.btn-border
    display inline-block
    border 1px solid $or
    box-sizing border-box
    border-radius 4px
    font-size 12px
    line-height 20 / 12
    text-align center
    letter-spacing 2px
    text-transform uppercase
    color $or
    padding: 14px 30px
    transition all .3s